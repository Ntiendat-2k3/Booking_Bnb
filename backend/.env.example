# Server
PORT=3000
NODE_ENV=development
FRONTEND_URL=http://localhost:3001

# DB (sequelize-cli style)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=airbnb_app
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DIALECT=postgres

# JWT (zip-style supports JWT_SECRET, and also supports separate secrets if you want)
JWT_SECRET=change_me_single_secret
JWT_ACCESS_SECRET=
JWT_REFRESH_SECRET=
JWT_ACCESS_TOKEN_EXPIRES=15m
JWT_REFRESH_TOKEN_EXPIRES=30d

# Google OAuth2
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3000/api/v1/auth/google/callback

# CORS
CORS_ORIGINS=http://localhost:3001,http://localhost:3002

# Cookies
COOKIE_REFRESH_NAME=refresh_token
COOKIE_SECURE=false
COOKIE_SAMESITE=lax

# Cookies
COOKIE_ACCESS_NAME=access_token
COOKIE_REFRESH_NAME=refresh_token
COOKIE_CSRF_NAME=csrf_token
COOKIE_SECURE=false
COOKIE_SAMESITE=lax
CSRF_TOKEN_EXPIRES=12h
